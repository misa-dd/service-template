variable "service_name" {
  type = string
}

provider "aws" {
  region  = "us-west-2"
  version = "2.23.0"
}

terraform {
  backend "s3" {
    bucket = "doordash-cluster-state"
    dynamodb_table = "doordash-cluster-state"
    key    = "resources/services/build/_GITREPO_/ecr.tfstate"
    region = "us-west-2"
  }
}

module "ecr_repo" {
  source = "git::ssh://git@github.com/doordash/terraform-aws-ecr.git?ref=master"
  service_full_name = var.service_name
}
